{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "assets": ["assets/*"],
      "auth": ["auth/*"],
      "components": ["components/*"],
      "configs": ["configs/*"],
      "constants": ["constants/*"],
      "translations": ["translations/*"],
      "layouts": ["layouts/*"],
      "pages": ["pages/*"],
      "redux": ["redux/*"],
      "routes": ["routes/*"],
      "services": ["services/*"],
      "helpers": ["helpers/*"]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
